{
  // Configurações de logging para a aplicação
  "Logging": {
    // Níveis de log para diferentes categorias
    "LogLevel": {
      "Default": "Information", // Nível padrão para mensagens da aplicação
      "Microsoft": "Warning", // Nível para mensagens do framework Microsoft
      "Microsoft.Hosting.Lifetime": "Information" // Nível para mensagens do tempo de vida do host
    }
  },
  // Define os hosts permitidos para a aplicação
  "AllowedHosts": "*",
  // Horário de abertura e fechamento da aplicação
  "OpeningTime": {
    "StartAt": "08:00:00", // Horário de abertura
    "FinishAt": "18:00:00" // Horário de fechamento
  },
  // String de conexão com o banco de dados DevFreela
  "ConnectionStrings": {
    "DevFreelaCs": "Server=localhost;Initial Catalog=DevFreela;Trusted_Connection=True;MultipleActiveResultSets=True;Encrypt=False;TrustServerCertificate=True;"
  },
  // Configurações para autenticação JWT (JSON Web Token)
  "Jwt": {
    "Key": "Oi blz a vida é linda seja feliz te amo mae te amo pai!", // Chave secreta para assinar e verificar tokens JWT
    "Issuer": "DevFreela", // Emissor dos tokens JWT
    "Audience": "ClientFreelancers" // Audiência dos tokens JWT
  }
}
